doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side JavaScript
        ul
            each item in topics
                li
                    - rid = encodeURIComponent(item['@rid'])
                    a(href='/topic/'+rid)= item.title
        artcle
            - rid = encodeURIComponent(topic['@rid'])
            form(action='/topic/'+rid+'/add' method='post')
                p
                    input(type='text' name='title' placeholder='title' value=topic.title) 
                p
                    textarea(name='description' placeholder='message')= topic.description
                p
                    input(type="text" name='author' placeholder='author' value=topic.author)
                p
                    input(type='submit')